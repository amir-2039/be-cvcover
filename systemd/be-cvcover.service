[Unit]
Description=FastAPI Application
Documentation=https://fastapi.tiangolo.com/
After=network.target
Wants=network.target

[Service]
Type=exec
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/be-cvcover
Environment=PATH=/home/ubuntu/be-cvcover/venv/bin
Environment=PYTHONPATH=/home/ubuntu/be-cvcover
Environment=ENVIRONMENT=production
Environment=DEBUG=false

# Application startup
ExecStart=/home/ubuntu/be-cvcover/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000 --workers 4
ExecReload=/bin/kill -HUP $MAINPID

# Restart policy
Restart=always
RestartSec=3
StartLimitInterval=60s
StartLimitBurst=3

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/home/ubuntu/be-cvcover
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true

# Resource limits
LimitNOFILE=65536
LimitNPROC=4096

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=fastapi-app

[Install]
WantedBy=multi-user.target
